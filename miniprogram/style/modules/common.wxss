.flex {
  display: flex;
  align-items: center;
}

/* 表单基础样式 */
.form-item {
  margin-top: 2rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  font-size: 30rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  min-width: 180rpx;
  color: #333;
  font-size: inherit;
  line-height: 1.4;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.form-content {
  flex: 1;
  min-height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.form-content input {
  width: 100%;
  border: none;
  padding: 0;
  margin: 0;
  background: transparent;
  font-size: inherit;
  color: #111;
  line-height: 1.4;
  text-align: right;
}

.form-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid transparent;
  border-left: 4rpx solid transparent;
  transform: rotate(45deg);
}