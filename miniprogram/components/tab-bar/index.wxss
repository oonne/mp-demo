.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
}

.tab-icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.tab-icon {
  width: 100%;
  height: 100%;
}

.tab-badge {
  position: absolute;
  top: -8rpx;
  right: -28rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff4444;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.badge-text {
  font-size: 20rpx;
  color: #fff;
  line-height: 1;
}

.tab-text {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1;
}
.active .tab-text {
  color: var(--color-primary);
}