.action-sheet {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

.action-sheet-title {
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  font-weight: normal;
}

.action-sheet-divider {
  height: 1rpx;
  background-color: #e5e5e5;
  margin: 0;
  width: 100%;
}

.action-sheet-divider-thick {
  height: 16rpx;
  background-color: #f5f5f5;
  margin: 0;
  width: 100%;
}

.action-sheet-options {
  width: 100%;
  max-height: 600rpx;
  overflow-y: auto;
}

.action-sheet-option {
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  color: #333;
  position: relative;
  line-height: 1.5;
  width: 100%;
  box-sizing: border-box;
}

.action-sheet-option::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: #e5e5e5;
}

.action-sheet-option:last-child::after {
  display: none;
}

.action-sheet-cancel {
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  width: 100%;
}

